{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": [
    "node_modules/",
    "dist/",
    "logs/"
  ],
  "exec": "tsx --watch -r dotenv/config src/app.ts",
  "delay": 1000,
  "colours": true,
  "legacyWatch": true,
  "pollingInterval": 100,
  "runOnChangeOnly": false,
  "signal": "SIGTERM",
  "verbose": true
}
