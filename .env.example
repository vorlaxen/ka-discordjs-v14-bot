# Environment
NODE_ENV=development          # development | production

# Bot Core
BOT_TOKEN=                  # Discord bot token
BOT_CLIENT_SECRET=          # Discord client secret
BOT_APP_ID=                 # Discord application ID
BOT_OWNER_IDS=              # Comma-separated owner IDs
BOT_PREFIX=!                # Command prefix
BOT_MAIN_SERVER=            # Test server ID

# Logging
BOT_LOG_LEVEL=info          # info | warn | error | debug
BOT_ERROR_CHANNEL=          # Channel ID for logging errors

# Moderation
BOT_MOD_AUTO_DELETE=true    # Auto-delete moderation messages
BOT_MOD_LOG_CHANNEL=        # Channel ID for moderation logs

# Database credentials
DB_USERNAME=postgres
DB_PASSWORD=                # Database password
DB_NAME=ka-bot
DB_HOST=localhost
DB_PORT=5432
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000
DB_LOGGING=false
DB_TIMEZONE=+00:00
DB_SSL=false

# Redis credentials
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=            # Redis password
REDIS_DB=0
REDIS_TLS_ENABLED=false
REDIS_PREFIX=ka-bot:
REDIS_CONNECT_TIMEOUT=10000
REDIS_MAX_RETRIES=5
REDIS_OFFLINE_QUEUE=true
REDIS_RETRY_MAX=10
